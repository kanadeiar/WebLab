@model Member
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Главная - Клуб программистов</title>
</head>
<body>
    <h1>Клуб программистов</h1>
    <a asp-action="Rules">Правила</a>
