@model WaitWebModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Ожидание - Онлайн игра "Шпион"</title>
    <script src="~/lib/htmx/htmx.js"></script>
</head>
<body>
    <a asp-action="Logout" asp-route-id="@Model.Id">Выход</a>

    <h4>Ожидание</h4>

    <div class="form-group">
        <label class="form-label">Ваше имя:</label>

        <input type="text" name="name" class="form-control"
               hx-get="@Url.Action("SetName", new { Model.Id })"
               hx-trigger="keyup changed dalay:500ms"
               value="@Model.Current.Name" />
    </div>

    <div id="wait" hx-get="@Url.Action("Index", new { Model.Id })"
         hx-trigger="every 1s">
        <partial name="Partial/WaitPartial" model="Model" />
    </div>

    <div id="rules"
         hx-get="@Url.Action("ShowRules", new { Model.Id })"
         hx-trigger="load">
    </div>
</body>
</html>