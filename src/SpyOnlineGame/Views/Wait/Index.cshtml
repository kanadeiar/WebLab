@model WaitWebModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Ожидание - Онлайн игра "Шпион"</title>
    <script src="~/lib/htmx/htmx.js"></script>
</head>
<body>
    <h4>Ожидание</h4>
    <p>
        Ваше имя:
        @Model.Current.Name
    </p>

    <div id="wait" hx-get="@Url.Action("Index", new { Model.Id })"
         hx-trigger="every 1s">
        <partial name="Partial/WaitPartial" model="Model"/>
    </div>
</body>
</html>